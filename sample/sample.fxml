<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="400.0" prefWidth="500.0">
         <children>
            <TextField fx:id="username" layoutX="176.0" layoutY="151.0" />
            <TextField fx:id="pass" layoutX="176.0" layoutY="188.0" onAction="#pass" />
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="150.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@erb.jpg" />
               </image>
            </ImageView>
            <Button fx:id="button" layoutX="224.0" layoutY="233.0" mnemonicParsing="false" onAction="#login" text="login" />
         </children>
      </Pane>
   </children>
</GridPane>
